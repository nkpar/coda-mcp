{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.nkpar/coda",
  "version": "0.2.4",
  "description": "Interact with Coda.io documents, tables, and rows via the Coda API",
  "repository": {
    "url": "https://github.com/nkpar/coda-mcp",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "oci",
      "identifier": "ghcr.io/nkpar/coda-mcp:0.2.4",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "CODA_API_TOKEN",
          "description": "Coda API token from coda.io/account",
          "isRequired": true,
          "isSecret": true
        }
      ]
    }
  ]
}
