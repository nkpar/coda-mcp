{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.nkpar/coda",
  "version": "0.2.0",
  "description": "MCP server for Coda.io API - enables AI assistants to read and write Coda documents, tables, and rows",
  "repository": {
    "url": "https://github.com/nkpar/coda-mcp",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "oci",
      "identifier": "ghcr.io/nkpar/coda-mcp",
      "version": "0.2.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "CODA_API_TOKEN",
          "description": "Coda API token from coda.io/account",
          "isRequired": true,
          "isSecret": true
        }
      ]
    }
  ]
}
